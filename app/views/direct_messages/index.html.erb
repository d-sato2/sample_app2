<% provide(:title, 'All users') %>
<h1>The users who exchanges messages</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
     
       <%= link_to user.name, 
      :controller => 'direct_messages', 
      :action => 'show', 
      :id => user.id
      %>
    </li>
  <% end %>
</ul>